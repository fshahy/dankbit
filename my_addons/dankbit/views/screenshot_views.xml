<?xml version="1.0"?>

<odoo>
    <record id="view_dankbit_screenshot_form" model="ir.ui.view">
        <field name="name">dankbit.screenshot.form</field>
        <field name="model">dankbit.screenshot</field>
        <field name="arch" type="xml">
            <form string="Screenshot">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="timestamp"/>
                        <field name="image_png" widget="image" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dankbit_screenshot_list" model="ir.ui.view">
        <field name="name">dankbit.screenshot.list</field>
        <field name="model">dankbit.screenshot</field>
        <field name="arch" type="xml">
            <list string="Dankbit screenshots">
                <field name="name"/>
                <field name="timestamp"/>
            </list>
        </field>
    </record>

    <record id="action_dankbit_screenshot" model="ir.actions.act_window">
        <field name="name">Dankbit Screenshots</field>
        <field name="res_model">dankbit.screenshot</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_dankbit_screenshot" name="Screenshots"
            action="action_dankbit_screenshot"
            parent="dankbit_root_menu"
            sequence="60"/>

</odoo>
