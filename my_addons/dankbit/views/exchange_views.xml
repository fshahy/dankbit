<?xml version="1.0"?>

<odoo>
    <record id="dankbit_exchange_view_form" model="ir.ui.view">
        <field name="name">dankbit_exchange.view.form</field>
        <field name="model">dankbit.exchange</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="active" />
                        <field name="name" />
                        <field name="client_id" />
                        <field name="client_secret" />
                        <field name="trades_url" />
                        <field name="index_price_url" />
                    </group>
                    <!-- <group>
                        <div>
                            <field name="plotly_chart" widget="plotly_chart" nolabel="1"/>
                        </div>                  
                    </group> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="dankbit_exchange_view_list" model="ir.ui.view">
        <field name="name">dankbit_exchange.view.list</field>
        <field name="model">dankbit.exchange</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="active" />
            </list>
        </field>
    </record>

    <record id="dankbit_exchange_action" model="ir.actions.act_window">
        <field name="name">Exchanges</field>
        <field name="res_model">dankbit.exchange</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="dankbit_root_menu" name="Dankbit" sequence="10"/>

    <menuitem id="dankbit_exchange_menu" name="Exchanges" parent="dankbit_root_menu"
        action="dankbit_exchange_action" sequence="20"/>
</odoo>