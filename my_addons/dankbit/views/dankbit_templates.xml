<odoo>
	<template id="dankbit_help" name="Dankbit Help">
		<t t-call="website.layout">
			<div class="container my-5">
				<div class="row text-center">
					<!-- Row 1 -->
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/LC.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 1" />
					</div>
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/LP.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 2" />
					</div>

					<!-- Row 2 -->
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/SC.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 3" />
					</div>
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/SP.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 4" />
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="dankbit_page" name="Dankbit Plot">
		<html>
			<head>
				<meta charset="utf-8"/>
				<meta http-equiv="refresh" t-att-content="refresh_interval"/>
				<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate"/>
				<meta http-equiv="Pragma" content="no-cache"/>
				<meta http-equiv="Expires" content="0"/>
				<meta name="viewport" content="width=device-width, initial-scale=1"/>
				<title><t t-esc="plot_title"/></title>

				<style>
					html, body {
						margin: 0;
						padding: 0;
						background: white;
					}

					.wrap {
						display: flex;
						justify-content: center;
						align-items: center;
					}

					img {
						display: block;
						max-width: 100vw;
						height: auto;
					}

					.gamma-label {
						text-align: center;
						color: #c900ff;
						margin: 0;
						padding: 0;
						font-size: 16pt;
					}
				</style>
			</head>

			<body>

				<div class="wrap">
					<img
						t-att-src="'data:image/png;base64,%s' % image_b64"
						alt="Dankbit plot"
					/>
				</div>

				<t t-if="plot_name != 'oi'">
					<p t-if="gamma_peak_value > 0" class="gamma-label">
						Magnified Gamma Peak: <t t-esc="gamma_peak_value"/>
					</p>
					<p t-if="gamma_peak_value == 0" class="gamma-label">
						No Positive Gamma.
					</p>
				</t>
			</body>
		</html>
	</template>

	<template id="dankbit_dashboard" name="Dankbit 3-Column Dashboard">
		<html>
			<head>
				<style>
					html, body {
						margin: 0;
						padding: 0;
						background: #0b0f14;
					}

					.db-row {
						display: flex;
						width: 100%;
						height: 100vh;
					}

					.db-col {
						flex: 1;
						height: 100%;
					}

					.db-frame {
						width: 100%;
						height: 100%;
						border: 0;
						display: block;
						background: #0b0f14;
					}
				</style>
			</head>

			<body>
				<div class="db-row">
					<div class="db-col">
						<iframe
							class="db-frame"
							t-attf-src="/{{today}}/b?width={{width}}&amp;height={{height}}&amp;from_price={{from_price}}&amp;to_price={{to_price}}"
						/>
					</div>

					<div class="db-col">
						<iframe
							class="db-frame"
							t-attf-src="/{{today}}/mm?width={{width}}&amp;height={{height}}&amp;from_price={{from_price}}&amp;to_price={{to_price}}"
						/>
					</div>

					<div class="db-col">
						<iframe
							class="db-frame"
							t-attf-src="/{{today}}/s?width={{width}}&amp;height={{height}}&amp;from_price={{from_price}}&amp;to_price={{to_price}}"
						/>
					</div>
				</div>
			</body>
		</html>
	</template>

</odoo>