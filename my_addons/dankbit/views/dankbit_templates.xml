<odoo>
	<template id="dankbit_help" name="Dankbit Help">
		<t t-call="website.layout">
			<div class="container my-5">
				<div class="row text-center">
					<!-- Row 1 -->
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/LC.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 1" />
					</div>
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/LP.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 2" />
					</div>

					<!-- Row 2 -->
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/SC.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 3" />
					</div>
					<div class="col-md-6 mb-4">
						<img src="/dankbit/static/src/img/SP.png"
							class="img-fluid rounded shadow-sm"
							alt="Image 4" />
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="dankbit_page" name="Dankbit Plot Minimal">
		<html>
			<head>
				<meta charset="utf-8"/>
				<meta http-equiv="refresh" t-att-content="refresh_interval"/>
				<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate"/>
				<meta http-equiv="Pragma" content="no-cache"/>
				<meta http-equiv="Expires" content="0"/>
				<meta name="viewport" content="width=device-width, initial-scale=1"/>
				<title><t t-esc="plot_title"/></title>

				<style>
					html, body { margin:0; padding:0; background:#0b0f14; }
					.wrap { display:flex; justify-content:center; align-items:center; min-height:100vh; }
					img { max-width:100vw; max-height:100vh; height:auto; width:auto; display:block; }
				</style>
			</head>

			<body>
				<div class="wrap">
				<img
					t-att-src="'data:image/png;base64,%s' % image_b64"
					alt="Dankbit plot"
				/>
				</div>
			</body>
		</html>
	</template>
</odoo>