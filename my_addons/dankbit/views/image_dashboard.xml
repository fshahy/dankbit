<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="image_dashboard" name="Tiled Image Dashboard (Opposite Alignments)">
    <html>
      <head>
        <title>Tiled Dashboard</title>
        <meta http-equiv="refresh" content="60" />
        <style>
          html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
          }

          /* Create a 2Ã—2 grid */
          body {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 0;
            background: #000;
          }

          /* Each cell acts as a flex container */
          .cell {
            display: flex;
            align-items: center; /* vertically centered */
            justify-content: flex-start; /* default */
            overflow: hidden;
          }

          /* Left column: align to right edge */
          .left {
            justify-content: flex-end;
          }

          /* Right column: align to left edge */
          .right {
            justify-content: flex-start;
          }

          img {
            display: block;
            margin: 0 !important;
            padding: 0 !important;
            border: none;
            max-width: 100%;
            max-height: 100%;
            background: #000;
          }
        </style>
      </head>

      <body>
        <!-- Row 1 -->
        <div class="cell left">
          <img t-att-src="'/i/%s/mm/0' % today"/>
        </div>
        <div class="cell right">
          <img t-att-src="'/i/%s/mm/1' % today"/>
        </div>

        <!-- Row 2 -->
        <div class="cell left">
          <img t-att-src="'/i/%s/mm/0' % tomorrow"/>
        </div>
        <div class="cell right">
          <img t-att-src="'/i/%s/mm/1' % tomorrow"/>
        </div>
      </body>
    </html>
  </template>
</odoo>
