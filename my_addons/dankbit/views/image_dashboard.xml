<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="image_dashboard" name="Tiled Image Dashboard (3 Columns)">
    <html>
      <head>
        <title>Tiled Dashboard</title>
        <meta http-equiv="refresh" content="60" />
        <style>
          html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
          }

          /* ✅ 3 columns × 2 rows grid */
          body {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 0;
            background: #000;
          }

          /* Each grid cell */
          .cell {
            display: flex;
            align-items: center;       /* vertical center */
            justify-content: center;   /* default center align */
            overflow: hidden;
            margin: 0 !important;
            padding: 0 !important;
          }

          /* Alignment rules per column */
          .left   { justify-content: flex-end; }   /* align right edge */
          .center { justify-content: center; }     /* center image */
          .right  { justify-content: flex-start; } /* align left edge */

          img {
            display: block;
            margin: 0 !important;
            padding: 0 !important;
            border: none;
            max-width: 100%;
            max-height: 100%;
            background: #000;
          }
        </style>
      </head>

      <body>
        <!-- Row 1 -->
        <div class="cell left">
          <img t-att-src="'/i/%s/mm/0' % today"/>
        </div>
        <div class="cell center">
          <img t-att-src="'/i/%s/mm/1' % today"/>
        </div>
        <div class="cell right">
          <img t-att-src="'/i/%s/mm/8' % today"/>
        </div>

        <!-- Row 2 -->
        <div class="cell left">
          <img t-att-src="'/i/%s/mm/0' % tomorrow"/>
        </div>
        <div class="cell center">
          <img t-att-src="'/i/%s/mm/1' % tomorrow"/>
        </div>
        <div class="cell right">
          <img t-att-src="'/i/%s/mm/8' % tomorrow"/>
        </div>
      </body>
    </html>
  </template>
</odoo>
