<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="image_dashboard" name="Tiled Image Dashboard (1 Row 2 Columns)">
    <html>
      <head>
        <title>Tiled Dashboard</title>
        <meta http-equiv="refresh" content="60" />
        <style>
          html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
          }

          /* ✅ 1 row × 2 columns grid */
          body {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr;
            background: lightgray;
          }

          .cell {
            display: flex;
            align-items: center;       /* vertical center */
            overflow: hidden;
            margin: 0 !important;
            padding: 0 !important;
          }

          img {
            display: block;
            margin: 0 !important;
            padding: 0 !important;
            border: none;
            max-width: 100%;
            max-height: 100%;
            background: #000;
          }
        </style>
      </head>

      <body>
        <!-- Column 1 -->
        <div class="cell" style="justify-content: flex-end;">
           <img t-attf-src="/{{ today }}/taker/{{ hours_ago }}"/>
        </div>
        <!-- Column 2 -->
        <div class="cell" style="justify-content: flex-start;">
           <img t-attf-src="/{{ today }}/mm/{{ hours_ago }}"/>
        </div>
      </body>
    </html>
  </template>
</odoo>
