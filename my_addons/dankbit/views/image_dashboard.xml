<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="image_dashboard" name="Tiled Image Dashboard (2 Columns 2 Rows)">
    <html>
      <head>
        <title>Tiled Dashboard</title>
        <meta http-equiv="refresh" content="60" />
        <style>
          html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
          }

          /* ✅ 2 columns × 2 rows grid */
          body {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            background: #000;
          }

          .cell {
            display: flex;
            align-items: center;       /* vertical center */
            justify-content: center;   /* horizontal center */
            overflow: hidden;
            margin: 0 !important;
            padding: 0 !important;
          }

          img {
            display: block;
            margin: 0 !important;
            padding: 0 !important;
            border: none;
            max-width: 100%;
            max-height: 100%;
            background: #000;
          }
        </style>
      </head>

      <body>
        <!-- Row 1 -->
        <div class="cell">
           <img t-attf-src="/i/{{ today }}/taker/4"/>
        </div>
        <div class="cell">
           <img t-attf-src="/i/{{ today }}/mm/4"/>
        </div>

        <!-- Row 2 -->
        <div class="cell">
           <img t-attf-src="/i/{{ today }}/taker/0"/>
        </div>
        <div class="cell">
           <img t-attf-src="/i/{{ today }}/mm/0"/>
        </div>
      </body>
    </html>
  </template>
</odoo>
