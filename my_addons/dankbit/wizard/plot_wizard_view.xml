<odoo>

    <record id="view_plot_wizard_form" model="ir.ui.view">
        <field name="name">dankbit.plot.wizard.form</field>
        <field name="model">dankbit.plot_wizard</field>
        <field name="arch" type="xml">
            <form string="Plot Wizard">
                <group>
                    <field name="image_png" widget="image" nolabel="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <odoo>
        <record id="action_open_plot_wizard" model="ir.actions.act_window">
            <field name="name">Open Plot Wizard</field>
            <field name="res_model">dankbit.plot_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_plot_wizard_form"/>
            <field name="target">new</field>
        </record>
    </odoo>

</odoo>
