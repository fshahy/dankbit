<templates id="dankbit_dashboard_templates" xml:space="preserve">
    <t t-name="dankbit_dashboard.TradesDashboardTemplate">
        <div class="o_dashboard container py-4">
            <h2 class="mb-4 text-primary">ðŸ“Š Total: <t t-esc="state.data.total"/></h2>

            <!-- First row -->
            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Calls</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.calls"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Puts</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.puts"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Buys</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.buys"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Sells</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.sells"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Second row -->
            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Long Calls</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.buy_calls"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Short Calls</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.sell_calls"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Long Puts</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.buy_puts"/>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Short Puts</h6>
                            <p class="display-6 fw-bold mb-0 text-primary">
                                <t t-esc="state.data.sell_puts"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Third row with 4 cells -->
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">MM Delta - </h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">MM Delta +</h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">MM Delta +</h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 text-center">
                        <div class="card-body">
                            <h6 class="card-title text-primary">MM Delta -</h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <p class="display-6 fw-bold mb-0 text-primary">
                    Final MM Delta  = <t t-esc="state.data.delta"/>
                </p>
            </div>

        </div>
    </t>
</templates>
